---
import BaseLayout from "./BaseLayout.astro";
import TagButton from "../components/TagButton.tsx"

const { frontmatter } = Astro.props;

---
<BaseLayout>
  <img class="w-full h-[240px] md:h-[480px] lg:h-[600px] object-cover object-center" src={frontmatter.image.url}>
  
  <div class="tags px-[120px] pt-[10px] gap-3">
    {
      frontmatter.tags.map((tag: string) => (
        <p> 
          <TagButton tag={tag} client:visible />
        </p>
      ))
    }
  </div>
  <div class="flex main-title justify-between items-end">
    <h1>{frontmatter.title}</h1>
    <p>{frontmatter.pubDate.toString().slice(0, 10)}</p>
  </div>
<div class="page-line blog"></div> 
 <h3 class="subtitle">{frontmatter.description}</h3>
<div>
  <main class="blog-content">
    <slot/>
  </main>
</div>

</BaseLayout>
